# Create a Map for Friends (for Graph Demo)
PUT friends
{
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 0
  },
  "mappings": {
    "doc": {
      "properties": {
        "userId": {
          "type": "text"
        }, "friends": {
          "type": "text"
        }
      }
    }
  }
}

# Adding Users
PUT friends/docs/1
{
  "userId": "Tony",
  "friends": ["Sara","Lou","Nick","Maggie"]
}

PUT friends/docs/2
{
  "userId": "Sara",
  "friends": ["Lou","Nick","Maggie"]
}

PUT friends/docs/3
{
  "userId": "Nick",
  "friends": ["Lou","Maggie"]
}

PUT friends/docs/4
{
  "userId": "Lou",
  "friends": ["Sara","Nick","Maggie","Tony"]
}

PUT friends/docs/5
{
  "userId": "Maggie",
  "friends": ["Sara","Lou"]
}

