GET zipgeo/_search
{
 "query": {
        "bool" : {
            "must" : {
                "match_all" : {}
            },
            "filter" : {
                "geo_distance" : {
                    "distance" : "20000ft",
                    "location" : {
                        "lat" : 34.055084,
                        "lon" : -84.390492
                    }
                }
            }
        }
    }
}


# Setup Mapping for ZipGeo Data
PUT _template/zipgeo
{
    "order": 10,
    "index_patterns": [
      "zipgeo*"
    ],
    "settings": {
      "index": {
        "number_of_shards": "3",
        "number_of_replicas": "0"
      }
    },
    "mappings": {
      "doc": {
        "properties": {
          "zipcode": {
            "type": "integer"
          },
          "location": {
            "type": "geo_point"
          }
        }
      }
    },
    "aliases": {}
}
